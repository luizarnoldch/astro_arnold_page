---
import Logo from "@/assets/Logo.astro";
import { Button } from "./ui/button";
---

<footer class="py-8">
  <div class="container mx-auto px-4">
    <!-- Top Section: Logo & Newsletter -->
    <div
      class="flex flex-col md:flex-row md:justify-between items-center border-b border-gray-700 pb-8 mb-8"
    >
      <!-- Logo -->
      <div class="mb-4 md:mb-0">
        <a href="#">
          <Logo />
        </a>
      </div>
      <!-- Newsletter Signup -->
      <div class="w-full md:w-1/2">
        <p class="mb-2 text-center md:text-right">
          Subscribe to our newsletter for the latest updates on features and
          releases.
        </p>
        <form
          action="#"
          method="post"
          class="flex flex-col sm:flex-row justify-center md:justify-end gap-2 py-8"
        >
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Your email here"
            required
            class="w-full sm:w-auto px-4 py-2 rounded-md text-gray-800 focus:outline-none border border-black"
          />
          <Button
            type="submit"
            class="mt-2 sm:mt-0 sm:ml-2 px-4 py-2 rounded-md"
            size="lg"
          >
            Join
          </Button>
        </form>
        <p class="mt-2 text-center md:text-right text-sm">
          By subscribing, you consent to our
          <a href="#" class="underline hover:text-gray-300">Privacy Policy</a>.
        </p>
      </div>
    </div>

    <!-- Middle Section: Links -->
    <div class="flex flex-row sm:flex-row justify-between mb-8">
